{
  "name": "neura.ai",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "build": {
    "productName": "neura.ai",
    "appId": "com.neura.app",
    "publish": [
      {
        "provider": "github",
        "owner": "y4th4rthh",
        "repo": "neura.ai-releases"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "neura.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Neura AI"
    }
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^25.8.4",
    "electron-builder": "^26.0.12"
  }
}
